<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="overlay_template_hotel_form_view" model="ir.ui.view">
        <field name="name">overlay.template.hotel.view.form</field>
        <field name="model">overlay.template</field>
        <field name="inherit_id" ref="regency_shopsite.overlay_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@id='attributes']" position="after">
                <page string="Hotels" id="hotels">
                    <group>
                        <field name="hotel_ids" widget="many2many_tags"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
