<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_order_cancellation_wizard_form" model="ir.ui.view">
        <field name="name">purchase.order.cancellation.wizard.form</field>
        <field name="model">purchase.order.cancel.wizard</field>
        <field name="arch" type="xml">
            <form>
                <header>
                </header>
                <field name="text"/>
                <group><field name="cancellation_reason"/></group>
                <footer>
                    <button name="cancel" string="Cancel" class="oe_highlight" type="object"/>
                    <button string="Discard" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
