<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sale_estimate_stage_search" model="ir.ui.view">
        <field name="name">Stage - Search</field>
        <field name="model">sale.estimate.stage</field>
        <field name="arch" type="xml">
            <search string="Stage Search">
                <field name="name"/>
                <field name="sequence"/>
            </search>
        </field>
    </record>

    <!-- STAGES TREE VIEW + MUTI_EDIT -->
    <record id="sale_estimate_stage_tree" model="ir.ui.view">
        <field name="name">sale.estimate.stage.tree</field>
        <field name="model">sale.estimate.stage</field>
        <field name="arch" type="xml">
            <tree string="Stages" multi_edit="1">
                <field name="sequence" widget="handle"/>
                <field name="name" readonly="1"/>
            </tree>
        </field>
    </record>

    <record id="sale_estimate_stage_form" model="ir.ui.view">
        <field name="name">sale.estimate.stage.form</field>
        <field name="model">sale.estimate.stage</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <form string="Stage">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="e.g. Negotiation"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="fold"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sale_estimate_stage_action" model="ir.actions.act_window">
        <field name="name">Stages</field>
        <field name="res_model">sale.estimate.stage</field>
        <field name="view_id" ref="regency_estimate.sale_estimate_stage_tree"/>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Set a new stage in your opportunity pipeline
          </p><p>
            Stages allow salespersons to easily track how a specific opportunity
            is positioned in the sales cycle.
          </p>
        </field>
    </record>

    <menuitem
        id="menu_sale_estimate_stage_act"
        name="Estimate Stages"
        sequence="0"
        parent="sale.menu_sale_config"
        action="regency_estimate.sale_estimate_stage_action"
        groups="base.group_no_one"/>

</odoo>
