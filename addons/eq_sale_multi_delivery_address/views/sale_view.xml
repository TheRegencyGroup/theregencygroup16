<?xml version="1.0"?>
<odoo>

	<record id="inherit_sale_view_order_form" model="ir.ui.view">
		<field name="name">sale.order</field>
		<field name="model">sale.order</field>
		<field name="inherit_id" ref="sale.view_order_form" />
		<field name="arch" type="xml">
			<xpath expr="//field[@name='order_line']/tree//field[@name='name']"
				position="after">
				<field name="delivery_partner_id" required="1"
					attrs="{'readonly': [('product_updatable', '=', False)]}" />
			</xpath>
			<xpath expr="//field[@name='order_line']/form//field[@name='price_unit']"
				position="after">
				<field name="delivery_partner_id" required="1"
					attrs="{'readonly': [('product_updatable', '=', False)]}" />
			</xpath>
		</field>
	</record>

</odoo>