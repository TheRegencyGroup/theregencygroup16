<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_image_form" model="ir.ui.view">
        <field name="name">product.image.view.form.extended</field>
        <field name="model">product.image</field>
        <field name="inherit_id" ref="website_sale.view_product_image_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='video_url']" position="after">
                <field name="is_fit_for_overlay" invisible="1"/>
                <div>
                    <button name="action_set_as_main_image" type="object"
                            attrs="{'invisible': [('is_fit_for_overlay', '=', False)]}"
                            class="btn btn-primary" string="Set as main"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
