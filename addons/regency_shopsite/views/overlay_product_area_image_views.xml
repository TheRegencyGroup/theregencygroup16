<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="overlay_product_area_image_form_view" model="ir.ui.view">
        <field name="name">overlay.product.area.image.view.form</field>
        <field name="model">overlay.product.area.image</field>
        <field name="arch" type="xml">
            <form>
                <field name="image_filename" invisible="1"/>
                <field name="image_type" invisible="1"/>
                <field name="overlay_position_ids" invisible="1"/>
                <sheet>
                    <group>
                        <group>
                            <field name="overlay_position_id" string="Position"/>
                            <field name="is_vector_image" string="Vector"/>
                            <field name="image" widget="binary_extended" filename="image_filename" filetype="image_type"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
