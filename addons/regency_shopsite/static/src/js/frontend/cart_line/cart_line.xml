<?xml version="1.0" encoding="UTF-8"?>
<templates>

    <t t-name="address_cart_line" owl="1">
        <div>
            <select t-on-change="processDeliveryAddressChanging">
                <option t-if="!currentDeliveryAddress" t-att-selected="!currentDeliveryAddress"/>
                <option t-foreach="possibleDeliveryAddresses" t-as="address" t-key="address.modelId" t-att-value="address.modelId"
                        t-att-selected="address.modelId === currentDeliveryAddress"
                        t-esc="address.addressStr"/>
                <option value="add_new_address">&lt; Add New Address &gt;</option>
            </select>
        </div>
    </t>

</templates>
