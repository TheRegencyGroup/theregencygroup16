<?xml version="1.0" encoding="UTF-8"?>
<templates>

    <t t-name="list_pagination" owl="1">
        <t t-set="numberOfPages" t-value="this.numberOfPages"/>
        <t t-set="currentPage" t-value="this.currentPage"/>
        <t t-if="numberOfPages gt 1">
            <div class="mt-4 mb-5 pagination_buttons">
                <ul class="pagination m-0">
                    <li class="page-item" t-att-class="{'disabled': this.isFirstCurrentPage}"
                        t-on-click="() => this.onClickPageBtn(currentPage - 1)">
                        <a role="button" class="page-link">Prev</a>
                    </li>
                    <t t-if="numberOfPages lte 7">
                        <t t-foreach="arrayFromRange(1, numberOfPages)" t-as="pageNumber" t-key="pageNumber.id">
                            <t t-call="page_button">
                                <t t-set="currentPage" t-value="currentPage"/>
                                <t t-set="pageNumber" t-value="pageNumber"/>
                            </t>
                        </t>
                    </t>
                    <t t-else="">
                        <t t-foreach="leftPages()" t-as="pageNumber" t-key="pageNumber.id" >
                            <t t-call="page_button">
                                <t t-set="currentPage" t-value="currentPage"/>
                                <t t-set="pageNumber" t-value="pageNumber"/>
                            </t>
                        </t>
                        <li class="page-item disabled"> ... </li>

                        <t t-if="centerPages()">
                            <t t-foreach="centerPages()" t-as="pageNumber" t-key="pageNumber.id">
                                <t t-call="page_button">
                                    <t t-set="currentPage" t-value="currentPage"/>
                                    <t t-set="pageNumber" t-value="pageNumber"/>
                                </t>
                            </t>
                            <li class="page-item disabled"> ... </li>
                        </t>

                        <t t-foreach="rightPages()" t-as="pageNumber" t-key="pageNumber.id">
                            <t t-call="page_button">
                                <t t-set="currentPage" t-value="currentPage"/>
                                <t t-set="pageNumber" t-value="pageNumber"/>
                            </t>
                        </t>
                    </t>
                    <li class="page-item" t-att-class="{'disabled': this.isLastCurrentPage}"
                        t-on-click="() => this.onClickPageBtn(currentPage + 1)">
                        <a role="button" class="page-link">Next</a>
                    </li>
                </ul>
            </div>
        </t>
        <t t-else="">
            <div></div>
        </t>
    </t>

    <t t-name="page_button" owl="1">
        <li class="page-item"
            t-att-class="{
                'active': currentPage === pageNumber,
            }">
            <a role="button" class="page-link"
               t-on-click="() => this.onClickPageBtn(pageNumber)">
                <t t-esc="pageNumber"/>
            </a>
        </li>
    </t>

</templates>
